<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="online.damfood.damfood.intro.IntroActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/pager_slide"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

    </android.support.v4.view.ViewPager>

    <TextView
        android:id="@+id/tv_masuk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dimen_size_30dp"
        android:layout_marginBottom="@dimen/dimen_size_25dp"
        android:text="Masuk"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/font_size_18sp"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/tv_lewati"
        android:layout_alignBottom="@+id/tv_lewati"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/tv_lewati"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="@dimen/dimen_size_25dp"
        android:layout_marginLeft="@dimen/dimen_size_30dp"
        android:text="Lewati"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/font_size_18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/layout_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_size_30dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:src="@drawable/dot_indicator"/>

    </LinearLayout>

</RelativeLayout>
